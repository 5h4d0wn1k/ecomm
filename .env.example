# Database Configuration
DATABASE_URL=postgresql://davcreationsuser:your_password_here@localhost:5433/davcreationsdb

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@ecommerce.com
FROM_NAME=E-Commerce Platform

# Payment Configuration (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Shipping Configuration (Shiprocket)
SHIPROCKET_EMAIL=your_shiprocket_email_here
SHIPROCKET_PASSWORD=your_shiprocket_password_here
SHIPROCKET_CHANNEL_ID=your_channel_id_here

# File Upload Configuration (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here
CLOUDINARY_UPLOAD_PRESET=ecommerce

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Admin Configuration
ADMIN_EMAIL=admin@ecommerce.com
ADMIN_PASSWORD=admin123

# Security
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_here